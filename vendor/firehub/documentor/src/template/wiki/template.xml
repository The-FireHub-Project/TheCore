    <version>0.2.0</version>
    <transformations>
        <transformation writer="twig" source="index.md.twig" artifact="Home.md"/>
        <transformation writer="twig" source="sidebar.md.twig" artifact="_Sidebar.md"/>
        <transformation writer="twig" source="footer.md.twig" artifact="_Footer.md"/>
        <transformation writer="twig" query="indexes.classes" source="class.md.twig" artifact="{{Namespace}}\{{Name}}.md"/>
        <transformation writer="twig" query="indexes.enums" source="enum.md.twig" artifact="{{Namespace}}\{{Name}}.md"/>
        <transformation writer="twig" query="indexes.functions" source="function.md.twig" artifact="{{Namespace}}\{{Name}}.md"/>
        <transformation writer="twig" query="indexes.constants" source="constant.md.twig" artifact="{{Namespace}}\{{Name}}.md"/>
    </transformations>
    <parameters>
        <parameter key="twig-debug">false</parameter>
    </parameters>
</template>